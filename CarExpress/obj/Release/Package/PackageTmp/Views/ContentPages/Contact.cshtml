@model PremiumPosWebsite.Models.ContactModel
@using PremiumPosWebsite.Helpers;
@using PremiumPosWebsite.Models;
@{Html.RenderPartial("_BreadCrumb");}
<style>
    .banner-area {
        display: none
    }
</style>
<div class="contact-area hm-4-padding">
    <div class="container-fluid">
        <div class="contact-map">
            <iframe 
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3581.9126818290956!2d50.55141921502855!3d26.13438988346895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjbCsDA4JzAzLjgiTiA1MMKwMzMnMTMuMCJF!5e0!3m2!1sen!2ssa!4v1631026240112!5m2!1sen!2ssa" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
    <div class="all-info ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact-info-wrapper">
                        <h4 class="contact-title">INFORMATION</h4>
                        <div class="communication-info">
                            <div class="single-communication">
                                <div class="communication-icon">
                                    <i class="ti-home" aria-hidden="true"></i>
                                </div>
                                <div class="communication-text">
                                    <h4>Address:</h4>
                                    <p>Sh Mohd Bin Ahmed Salman Ave, Riffa, Bahrain</p>
                                </div>
                            </div>
                            <div class="single-communication">
                                <div class="communication-icon">
                                    <i class="ti-mobile" aria-hidden="true"></i>
                                </div>
                                <div class="communication-text">
                                    <h4>Phone:</h4>
                                    <p>+97338499313</p>
                                </div>
                            </div>
                            <div class="single-communication">
                                <div class="communication-icon">
                                    <i class="ti-email" aria-hidden="true"></i>
                                </div>
                                <div class="communication-text">
                                    <h4>Email:</h4>
                                    <p><a href="mailto:info@samiacrafts.com">info@samiacrafts.com</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-message-wrapper">
                        <h4 class="contact-title">GET IN TOUCH</h4>
                        <div class="contact-message">
                            @using (Ajax.BeginForm(ApplicationHelper.PageContactUs, "Ajax", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnFormBegin", OnComplete = "OnFormComplete", OnSuccess = "OnFormSuccess", OnFailure = "OnFormFailure" }, new { @id = "FormContact", @autocomplete = "off" }))
                            {
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="contact-form-style mb-20">
                                            @Html.TextBoxFor(m => m.FullName, null, new { @placeholder = "Full Name *", @tabindex = "1" })
                                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="contact-form-style mb-20">
                                            @Html.TextBoxFor(m => m.EmailAddress, null, new { @placeholder = "Email Address *", @tabindex = "2" })
                                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="contact-form-style mb-20">
                                            @Html.TextBoxFor(m => m.Subject, null, new { @placeholder = "Subject *", @tabindex = "3" })
                                            @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="contact-form-style">
                                            @Html.TextAreaFor(m => m.Message, new { @placeholder = "Message *", @tabindex = "4" })
                                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                                            <br clear="all" />
                                            <button class="submit cr-btn btn-style button-submit" type="submit" data-text="<span>Send Message</span>" id="btn_contact"><span>Send Message</span></button>
                                        </div>
                                    </div>
                                </div>
                            }
                            <p class="msg-area"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>