@model CarExpress.Models.RegisterModel
@using CarExpress.Helpers;
@using CarExpress.Models;
@{Html.RenderPartial("_BreadCrumb");}
<div class="login-register-area ptb-130 hm-3-padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-7 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" href="#">
                            <h4> Profile </h4>
                        </a>
                    </div>
                    <div class="login-form-container">
                        <div class="login-form">
                            @using (Ajax.BeginForm(ApplicationHelper.PageProfile, "Ajax", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnFormBegin", OnComplete = "OnFormComplete", OnSuccess = "OnFormSuccess", OnFailure = "OnFormFailure" }, new { @id = "FormProfile", @autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.TextBoxFor(m => m.Name, null, new { @placeholder = "Name *", @tabindex = "1" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.EmailAddress, null, new { @placeholder = "Email Address *", @tabindex = "2" })
                                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                                @Html.PasswordFor(m => m.Password, new { @Value = Model.Password, @class = "form-control", @placeholder = "Password *", @tabindex = "3" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Mobile, null, new { @placeholder = "Mobile *", @tabindex = "4" })
                                @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Address, null, new { @placeholder = "Address *", @tabindex = "5" })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                <div class="button-box">
                                    <button type="submit" class="btn-style msg-area cr-btn button-submit" data-text="<span>Update</span>" tabindex="6"><span>Update</span></button>
                                </div>
                            }
                        </div>
                        <p class="msg-area"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>